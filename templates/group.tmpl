{{define "group.tmpl"}}
<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Group {{.Code}} - Initiative</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/darkly/bootstrap.min.css" rel="stylesheet">
  <link href="/static/css/app.css" rel="stylesheet">
  <script defer src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.2/Sortable.min.js"></script>
  <script defer src="/static/js/group.js"></script>
  <style>body{background:#0b0f14}</style>
</head>
<body data-code="{{.Code}}" data-isdm="{{.IsDM}}">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Init Tracker</a>
    <div class="navbar-text">Group <span class="fw-bold">{{.Code}}</span></div>
  </div>
  </nav>
<div class="container py-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <span class="badge text-bg-secondary">Round <span id="round">1</span></span>
      <span class="badge text-bg-primary">Turn <span id="turn">1</span></span>
    </div>
    <div>
      <button id="nextBtn" class="btn btn-success">Next Turn</button>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-lg-4">
      <div class="card h-100">
        <div class="card-body">
          <h2 class="h5">Add Player</h2>
          <form id="playerForm" class="row g-2">
            <div class="col-12"><input class="form-control" name="name" placeholder="Character name" required></div>
            <div class="col-6"><input type="number" class="form-control" name="initiative" placeholder="Initiative" min="0"></div>
            <div class="col-6"><input type="number" class="form-control" name="bonus" placeholder="Bonus" value="0"></div>
            <div class="col-6 d-grid"><button class="btn btn-primary" type="submit">Add</button></div>
            <div class="col-6 d-grid"><button id="rollBtn" class="btn btn-outline-primary" type="button">Roll + Bonus</button></div>
          </form>

          {{if .IsDM}}
          <hr>
          <h2 class="h5">Add Monster (DM)</h2>
          <form id="monsterForm" class="row g-2">
            <div class="col-12"><input class="form-control" name="name" placeholder="Monster name" required></div>
            <div class="col-6"><input type="number" class="form-control" name="hp" placeholder="HP" min="0" value="10"></div>
            <div class="col-3"><input type="number" class="form-control" name="initiative" placeholder="Init" min="0"></div>
            <div class="col-3"><input type="number" class="form-control" name="bonus" placeholder="Bonus" value="0"></div>
            <div class="col-12 d-grid"><button class="btn btn-warning" type="submit">Add Monster</button></div>
          </form>
          {{end}}
        </div>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="card h-100">
        <div class="card-body">
          <h2 class="h5 d-flex align-items-center gap-2">Initiative Order <small class="text-muted">drag to reorder (DM)</small></h2>
          <ul id="list" class="list-group list-group-flush"></ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{{end}}
